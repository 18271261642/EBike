<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/homeEmptyImgView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_empty_img"/>


    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/homeConnNewDeviceTv"
        app:layout_constraintTop_toBottomOf="@id/homeEmptyImgView"
        app:layout_constraintLeft_toLeftOf="@id/homeEmptyImgView"
        app:layout_constraintRight_toRightOf="@id/homeEmptyImgView"
        app:shape_solidColor="#30D158"
        app:shape_radius="@dimen/dp_5"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="@dimen/dp_8"
        android:textSize="@dimen/sp_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接新设备"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>