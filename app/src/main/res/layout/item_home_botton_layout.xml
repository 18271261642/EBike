<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_5"
    app:shape_radius="@dimen/dp_8"
    android:layout_margin="@dimen/dp_5"
    app:shape_solidColor="@color/white"
    app:shape_shadowColor="#F2F2F7"
    app:shape_shadowSize="@dimen/dp_10"
    android:layout_height="wrap_content">



    <com.hjq.shape.layout.ShapeConstraintLayout
        android:paddingTop="@dimen/dp_10"
        android:id="@+id/homeHistoryLayout"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"

        android:layout_width="match_parent"
        app:shape_solidColor="@color/white"
        app:shape_shadowColor="#F2F2F7"
        app:shape_radius="@dimen/dp_10"

        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History Data"
            android:textColor="#ff323333"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MORE"
            android:textColor="#ffc7c7cc"
            android:drawableRight="@drawable/ic_right_black_img"/>



    </com.hjq.shape.layout.ShapeConstraintLayout>


    <com.hjq.shape.layout.ShapeLinearLayout
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        app:shape_solidColor="@color/white"
        app:shape_shadowColor="#F2F2F7"
        android:paddingTop="5dp"
        app:shape_radius="@dimen/dp_10"
        app:shape_shadowSize="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计里程"
                android:textColor="#ffc7c7cc"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/homeTotalDistanceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="0"
                android:textColor="#ff323333"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="@dimen/dp_5"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_home_bottom_distance" />


            <View
                android:layout_width="@dimen/dp_15"
                android:layout_height="0dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_home_bottom_time" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="right"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总时长"
                android:textColor="#ffc7c7cc"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/homeTotalTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ff1c1c1e"
                android:textSize="23sp" />

        </LinearLayout>


    </com.hjq.shape.layout.ShapeLinearLayout>
    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总次数"
                android:layout_gravity="center"
                android:textColor="#ffc7c7cc"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/homeTotalNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="3dp"
                android:layout_gravity="center"
                android:textColor="#ff323333"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总热量消耗"
                android:textColor="#ffc7c7cc"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/homeTotalCalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="3dp"
                android:textColor="#ff1c1c1e"
                android:textSize="23sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="总减碳"
                android:textColor="#ffc7c7cc"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/homeTotalCo2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="0"
                android:textColor="#ff1c1c1e"
                android:textSize="23sp" />

        </LinearLayout>


    </com.hjq.shape.layout.ShapeLinearLayout>

</com.hjq.shape.layout.ShapeLinearLayout>