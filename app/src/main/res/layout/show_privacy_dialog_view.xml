<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:padding="5dp"
    android:gravity="center"
    android:layout_height="match_parent">


    <com.hjq.shape.layout.ShapeLinearLayout
        app:shape_radius="@dimen/dp_10"
        android:layout_width="match_parent"
        app:shape_solidColor="@color/white"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="match_parent">




    <TextView
        android:textColor="@color/color_black_txt_color"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户协议和隐私政策"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="17sp"
           android:padding="8dp"
           android:layout_margin="10dp"
           android:lineSpacingExtra="5dp"
           android:text="@string/string_privacy_str"/>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:orientation="vertical">


           <TextView
               android:id="@+id/userAgreementTv"
               android:layout_width="wrap_content"
               android:textSize="18sp"
               android:padding="5dp"
               android:textColor="@color/blue"
               android:layout_height="wrap_content"
               android:text="@string/user_agreement_tips"/>

           <TextView
               android:id="@+id/privacyTv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:padding="5dp"
               android:textColor="@color/blue"
               android:text="@string/privacy_agreement_tips"/>


       </LinearLayout>


   </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <com.hjq.shape.view.ShapeButton
            app:shape_solidColor="@color/white"
            app:shape_radius="@dimen/dp_8"
            android:id="@+id/privacyCancelBtn"
            android:layout_width="0dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center"
          android:textColor="@color/color_black_txt_color"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:text="不同意"/>


        <com.hjq.shape.view.ShapeButton
            app:shape_radius="@dimen/dp_8"
            app:shape_solidColor="@color/white"
            android:id="@+id/privacyConfirmBtn"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_margin="@dimen/dp_3"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="同意"/>


    </LinearLayout>

    </com.hjq.shape.layout.ShapeLinearLayout>
</LinearLayout>