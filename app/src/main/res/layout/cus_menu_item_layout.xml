<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_radius="@dimen/dp_20"
    app:shape_strokeColor="#F2F2F7"
    app:shape_strokeWidth="0.5dp"
    android:layout_width="match_parent"
    app:shape_solidColor="@color/white"
    android:padding="10dp"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/cusMenuItemLeftTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="设置总里程"/>


    <EditText
        android:id="@+id/cusMenuEditTv"
        android:visibility="gone"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLength="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cusMenuItemRightTv"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/cusMenuItemRightTv"
        app:layout_constraintRight_toLeftOf="@+id/cusMenuItemRightImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/cusMenuItemRightImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_black_img"/>

</com.hjq.shape.layout.ShapeConstraintLayout>