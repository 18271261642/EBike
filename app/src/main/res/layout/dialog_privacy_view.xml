<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/privacy_dialog_shap"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"

            android:padding="5dp"
            android:text="用户协议和隐私政策"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="感谢您使用e-bike！为保障您的权利，在使用我们的服务前，请通过《用户协议》和《隐私政策》了解我们对个人信息的适用情况与您所享有的相关权利。
点击“同意”，即标识您同意最新的“服务协议”和关于“隐私政策”的声明。"
            android:textColor="#ffffffff"
            android:textSize="16sp" />


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/privacyDialogCancelTv"
            android:layout_width="match_parent"
            app:shape="rectangle"
            app:shape_angle="0"
            app:shape_centerX="0.5"
            android:textColor="@color/white"
            android:text="取消"
            app:shape_centerY="0.5"
            app:shape_radius="@dimen/dp_20"
            app:shape_startColor="#80000000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/privacyDialogSureTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/comm_green_btn_click"
            android:gravity="center"
            android:padding="10dp"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>