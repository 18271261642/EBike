<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">

        <com.hjq.bar.TitleBar
            app:leftIcon="@drawable/ic_title_bar_black_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:title="法律-中国大陆"/>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/privacyUserAgreementTv"
                app:shape_radius="@dimen/dp_20"
                app:shape_solidColor="#30D158"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:padding="13dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:text="用户协议"
                android:textColor="@color/white" />

            <com.hjq.shape.view.ShapeTextView
                app:shape_radius="@dimen/dp_20"
                android:id="@+id/privacyPrivacyTv"
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:padding="13dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="隐私政策"
                android:textColor="#1C1C1E" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/white_border_shap"
            android:layout_height="0dp"
            android:layout_weight="1"
            >



            <WebView
                android:id="@+id/privacyWebView"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:lineSpacingExtra="10dp"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:layout_height="match_parent"/>


        </LinearLayout>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>